<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login4"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RegisterActivity">


    <TextView

        android:layout_width="283dp"
        android:layout_height="42dp"
        android:layout_marginTop="100dp"
        android:text="REGISTRATION"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30dp" />


    <EditText
        android:id="@+id/textu"
        android:layout_width="283dp"
        android:layout_height="35dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/edit_rounded"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:hint="Username"
        android:singleLine="true" />


    <EditText
        android:id="@+id/textemail"
        android:layout_width="283dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/edit_rounded"
        android:drawableStart="@drawable/ic_mail_black_24dp"
        android:hint="Email"
        android:singleLine="true" />


    <EditText
        android:id="@+id/textphone"
        android:layout_width="283dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_rounded"
        android:drawableStart="@drawable/ic_phone_black_24dp"
        android:hint="Phone Number"
        android:singleLine="true" />


    <EditText
        android:id="@+id/textp"
        android:layout_width="283dp"
        android:layout_height="35dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="-10dp"
        android:background="@drawable/edit_rounded"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawableRight="@drawable/ic_visibility_off_black_24dp"
        android:hint="Password"
        android:maxLines="1"
        android:password="true"
        android:singleLine="true" />

    <TextView
        android:id="@+id/notComfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Password didn't match"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/textpc"
        android:layout_width="283dp"
        android:layout_height="35dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edit_rounded"
        android:drawableLeft="@drawable/ic_lock_open_black_24dp"
        android:drawableRight="@drawable/ic_visibility_off_black_24dp"
        android:hint="Confirm Password"
        android:password="true"
        android:singleLine="true" />

    <Button
        android:id="@+id/buttonreg"
        android:layout_width="198dp"
        android:layout_height="40dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="-10dp"
        android:background="@drawable/button_round"
        android:outlineProvider="background"
        android:shadowColor="#EB151816"
        android:shadowRadius="40"
        android:text="Register" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/textreg"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:text="Already Registered"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textlog"
        android:layout_width="143dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:text="Login"
        android:textAlignment="center"
        android:textSize="23dp"
        android:textStyle="bold" />


</LinearLayout>